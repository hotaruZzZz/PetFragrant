@model Category

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center">
    <div>
        <h1 class="qtxt">確定要刪除這個類別嗎?</h1>
        <hr>
        <p class="qtxt">這邊是指刪除子類別喔!  <br />若父類下沒有子類別就會被刪掉</p>
        <div>
            <div class="row">
                <div class="qtxt">
                    商品類別:     @Html.DisplayFor(model => model.CategoryName)
                </div>
                <div class="qtxt">
                    商品父類別:    @Html.DisplayFor(model => model.FatherCategory.CategoryName)
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index">Back to List</a>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoryId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>

        </div>
    </div>
</div>


@section topCSS
    {
    <style>

        .qhr {
            border: 5px solid;
            color: #641E16;
        }

        .qtxt {
            color: #6C5C53;
            font-weight: bold;
        }

        .qbtn {
            width: 100px;
            border-radius: 50px;
            font-size: larger;
            font-weight: bold;
            border: none;
            background-color: #6C5C53;
            color: white;
            border-color: transparent;
        }
    </style>
    }