@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatherCategoryId" class="control-label"></label>
                <select asp-for="FatherCategoryId" class="form-control" asp-items="ViewBag.FatherCategoryID">
                    <option value="">==選擇父類別==</option>
                </select>
                <span asp-validation-for="FatherCategoryId" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

