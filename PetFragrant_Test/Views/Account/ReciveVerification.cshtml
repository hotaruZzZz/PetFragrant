
@{
    ViewData["Title"] = "信箱驗證";
}

<div class="bg-white rounded-2 shadow-sm p-2 mb-3 align-content-center align-items-center d-flex flex-column">
    <h4>已發送驗證信到您的電子信箱</h4>
    <hr />

    <form method="post" action="ReciveVerification" class="d-flex flex-column align-items-center">
        <input name="email" value="@ViewBag.Email" hidden />
        <label class="form-label">請輸入驗證碼:</label>
        <input type="text" name="code" class="input-group-text" />
        <button class="btn btn-danger m-2" type="submit">送出</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
</div>
