@model PetFragrant_Test.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="qtxt"><center>刪除商品</center></h1>


<div class="container-fluid  ">

    <div class="col-12 qtxt d-flex justify-content-center align-content-center ">
        <div class="w-25 ">
            <hr class="qhr" />
            <h4 class=" text-center">商品名稱: @Html.DisplayFor(model => model.ProductName)</h4>
            <h4 class=" text-center">商品描述: @Html.DisplayFor(model => model.ProductDescription)</h4>
            <div class=" d-flex justify-content-center align-content-center">
                <img src="~/images/@Model.ProdcutId/1.png" class="Deleteimg p-3">
            </div>
            <div class="form-group d-flex justify-content-end m-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProdcutId" />
                    <input type="submit" value="Delete" class="qbtn" />
                    <a asp-action="Index">回前頁</a>
                </form>
            </div>
        </div>
    </div>


</div>


</div>


@section topCSS
    {
    <style>
        .qhr {
            border: 3px solid;
            color: #641E16;
        }

        .qtxt {
            color: #6C5C53;
            font-weight: bold;
        }

        .qbtn {
            width: 120px;
            border-radius: 50px;
            background-color: #6C5C53;
            font-weight: bolder;
            color: white !important;
            border-color: transparent;
        }

        .Deleteimg {
            width: 300px;
            height: 300px;
        }
    </style>


}