@model IEnumerable<PetFragrant_Test.Models.Product>
@{
    ViewData["Title"] = @ViewBag.Name;
}

<div class="p-2 mb-3 text-white main-bg rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">@ViewBag.Name</h1>
        @foreach (var c in ViewBag.MainCategory)
        {
            <a class="btn btn-outline-light" href="/子類別/@c.CategoryName">@c.CategoryName</a>
        }
    </div>
</div>

<div class="d-flex flex-wrap row mb-2"> 


    @foreach (var item in Model)
    {
        <a asp-action="ProductDetail" asp-route-id="@item.ProdcutId" class="card bg-white col-4 col-md-2 mt-2 text-decoration-none">
            <div class="d-flex flex-column  align-items-center">
                <div class="img-con"><img src="~/images/@(item.ProdcutId)/1.png" class="w-100 mt-1"></div>

                <div class="card-body w-100">
                    <h6 class="card-title w-100" style="color:midnightblue">@item.ProductName</h6>
                    <p class="m-0 p-0"><del style="color:gray;">$ @Math.Round(item.Price)</del></p>
                    <div class="d-flex justify-content-between  w-100">
                        <h5 class="card-text" style="color:darkred;">$ @Math.Round(item.Price * (decimal)(0.9))</h5>
                    </div>
                </div>
                @if(item.Inventory == 0)
                {
                    <div class="soldout ">售完</div>
                }
                
            </div>
        </a>

    }

</div>
<nav aria-label="Page navigation ">
    <ul class="pagination justify-content-center">
        @if (ViewBag.Page > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("MainCategory", "Products", new { name = ViewData["Name"], page = ViewBag.Page - 1 })">上一頁</a>
            </li>
        }
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("MainCategory", "Products", new { name = ViewData["Name"], page = i })">@i</a>
            </li>
        }
        @if (ViewBag.Page < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("MainCategory", "Products", new { name = ViewData["Name"], page = ViewBag.Page + 1 })">下一頁</a>
            </li>
        }
    </ul>
</nav>
@section topCSS{
    <style>
        .main-bg{
            background-color: #CCB79E;
        }
    </style>
}