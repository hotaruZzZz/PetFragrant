@model PetFragrant_Test.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>編輯</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdcutId" />

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <textarea asp-for="ProductName" class="form-control">
                </textarea>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <div class="w-50">
                    <label class="control-label">主類別</label>
                    <select id="mainCategory" class="form-control" asp-items="ViewBag.CategoriesID"></select>
                </div>
                <div class="w-50 ms-2">
                    <label class="control-label">子類別</label>
                    <select id="subCategory" name="CategoriesId" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <textarea asp-for="ProductDescription" class="form-control">
                </textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory" class="control-label"></label>
                <input asp-for="Inventory" class="form-control" />
                <span asp-validation-for="Inventory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section endJS{
    <script>
        $(document).ready(function () {
            var mainCategory = $('#mainCategory');
            var subCategory = $('#subCategory');

            updateSubCategory(mainCategory.val());
            mainCategory.change(function () {
                var selectedMainCategory = $(this).val();
                updateSubCategory(selectedMainCategory);
            });

            function updateSubCategory(selectedMainCategory) {
                $.ajax({
                    url: '/Products/GetSubcategory',
                    type: 'GET',
                    data: { id: selectedMainCategory },
                    success: function (data) {
                        // console.log(data);
                        subCategory.empty();
                        $.each(data, function (index, item) {
                            var option = $('<option>').val(item.categoryId
                            ).text(item.categoryName);
                            subCategory.append(option);
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }
        });
    </script>
}