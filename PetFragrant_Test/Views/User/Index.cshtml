@model PetFragrant_Test.Data.ApplicationUser
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment

@{
    ViewData["Title"] = "使用者資訊";
}

<h1><center>使用者資訊</center></h1>

    <div class="row bg-white h-50 p-4 rounded-2 shadow-sm   ">
        <div class="col-12 col-md-4 d-flex flex-column align-items-center">

        <img src="~/images//User/@Model.UserID/@(Model.UserID).png" class="rounded-circle ava-con avatar" alt="avatar" />
        <h4>@User.Identity.Name</h4>
        </div>
        <div class="col-12 col-md-6">
            <table class="table table-hover table-borderless">
                <tbody class="">
                    <tr>
                        <td><h5>姓名</h5></td>
                    <td>@ViewBag.User.Name</td>
                    </tr>
                    <tr>
                        <td><h5>E-mail</h5></td>
                    <td>@ViewBag.User.Email</td>
                    </tr>
                    <tr>
                        <td><h5>手機號碼</h5></td>
                        <td>@ViewBag.User.PhoneNo</td>
                    </tr>
                    <tr>
                        <td><h5>會員等級</h5></td>
                        <td>一般會員</td>
                    </tr>
                </tbody>
            </table>
        <a asp-action="Edit" asp-route-id="@Model.UserID">編輯</a>
        </div>
    </div>

    <div class="row bg-white h-100 mt-4 p-2 shadow-sm rounded-2">
        <div class="grid-container ">
            <a asp-action="likes" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-heart-fill display-6 text-white"></i>
                    </div>
                    <h5 class="fw-bold">按讚好物</h5>
                </div>
            </a>
        <a asp-action="Edit" asp-route-id="@Model.UserID" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-gear-fill text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">修改資料</h5>
                </div>
            </a>
        <a href="/Orderlist/MyOrder" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-card-checklist text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">我的訂單</h5>
                </div>
            </a>
            <a href="#" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-ticket-perforated text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">折價券</h5>
                </div>
            </a>
        <a href="/Orderlist/History" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-clock-history text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">購買紀錄</h5>
                </div>
            </a>
            <a href="#" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-chat-dots text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">客服中心</h5>
                </div>
            </a>
            <a href="#" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-gem text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">香檳升級</h5>
                </div>
            </a>
            <a href="#" class="grid-item">
                <div class="img">
                    <div class="circle rounded-circle  d-flex justify-content-center align-items-center" style="background-color:#E0B547;width: 100px; height: 100px;">
                    <i class="bi bi-cash text-white display-3"></i>
                    </div>
                    <h5 class="fw-bold">付款方式</h5>
                </div>
            </a>


        </div>
    </div>


@section topCSS{
    <style>

        .grid-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1px;
            height:100%;
        }

        @@media screen and (min-width : 1024px ) {
            .grid-container {
                display: grid;
                grid-template-columns: repeat(4, 1fr);
                gap: 1px;
            }
        }


        .grid-item {
            /*background-color: rgb(255, 255, 255);*/
            height: 150px;
            border: none;
            display: flex;
            text-align: center;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: #3a3946;
        }

            .grid-item:hover {
                color: #dd8a24;
            }
    </style>
}    
@section endJS{
    <script>
        var imageElement = document.getElementById("avatar");

        imageElement.onerror = function () {
            // 图像加载失败时的处理逻辑
            imageElement.src = "https://picsum.photos/200/200/?random=10"; // 设置备用图像的路径
        };
    </script>
}