@model IEnumerable<PetFragrant_Test.ViewModels.CouponViewModel>
@{
    ViewData["Title"] = "折價券";
}

<div class="d-flex flex-wrap justify-content-center">
    <h1 class="w-100 text-center">Coupon</h1>
    @if(Model.Count() > 0)
    {
        <table class="table table-hover w-50">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">名稱</th>
                    <th scope="col">使用期限</th>
                    <th scope="col">描述</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"></th>
                        <td>@item.Name</td>
                        <td>@item.Period</td>
                        <td>@item.Description</td>
                    </tr>
                }


            </tbody>
        </table>
    }
    else
    {
        <h5 class="w-100 text-center">沒有折價券&#128549;</h5>
    }

</div>

<a class="btn btn-primary" href="/User/ShoppingCart">回購物車使用</a>
